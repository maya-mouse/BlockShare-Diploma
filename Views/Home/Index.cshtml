@{
    ViewData["Title"] = "Home Page";
}

<main>
    <!-- Hero Section -->
    <section class="py-5" style="background: linear-gradient(135deg, #ffe0f0, #e0d4f7);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h1 class="display-4 fw-bold" style="color: #8d50c7;">Secure File Sharing with Blockchain</h1>
                    <p class="lead my-4" style="color: #5a5a5a;">Store, share, and track your files with unparalleled security using our blockchain-powered platform.</p>
                    <div class="d-flex gap-3">
                        <a href="/Account/Register" class="btn btn-primary btn-lg"><i class="fas fa-rocket me-2"></i>Get Started</a>
                        <a href="#how-it-works" class="btn btn-primary btn-lg"><i class="fas fa-info-circle me-2"></i>Learn More</a>
                    </div>
                </div>
                <div class="col-lg-6">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5" style="color: #a26ae4;">Why Choose BlockShare</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: #f9c5d1;">
                                <i class="fas fa-shield-alt fa-2x" style="color: #fff;"></i>
                            </div>
                            <h3 class="card-title h5">Blockchain Security</h3>
                            <p class="card-text">Every file is verified and tracked with blockchain technology ensuring tamper-proof security.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: #c5c6f9;">
                                <i class="fas fa-share-alt fa-2x" style="color: #fff;"></i>
                            </div>
                            <h3 class="card-title h5">Easy Sharing</h3>
                            <p class="card-text">Share files with specific users or make them public while maintaining control.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: #da94f7;">
                                <i class="fas fa-history fa-2x" style="color: #fff;"></i>
                            </div>
                            <h3 class="card-title h5">Full Transparency</h3>
                            <p class="card-text">Track every interaction with your files through our immutable blockchain records.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section id="how-it-works" class="py-5" style="background-color: #f9f0f7;">
        <div class="container">
            <h2 class="text-center mb-5" style="color: #a26ae4;">How It Works</h2>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="d-flex flex-column gap-4">
                        <div class="d-flex align-items-start">
                            <div class="me-3 rounded-circle d-flex align-items-center justify-content-center" style="min-width: 50px; height: 50px; background-color: #ec407a; color: white;">
                                <span class="fw-bold">1</span>
                            </div>
                            <div>
                                <h3 class="h5" style="color: #6a1b9a;">Upload Your Files</h3>
                                <p>Simply upload your files to our secure platform. Each file is encrypted and assigned a unique hash.</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="me-3 rounded-circle d-flex align-items-center justify-content-center" style="min-width: 50px; height: 50px; background-color: #ec407a; color: white;">
                                <span class="fw-bold">2</span>
                            </div>
                            <div>
                                <h3 class="h5" style="color: #6a1b9a;">Blockchain Verification</h3>
                                <p>Your file's hash is recorded in our blockchain, creating a tamper-proof record of its existence and authenticity.</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="me-3 rounded-circle d-flex align-items-center justify-content-center" style="min-width: 50px; height: 50px; background-color: #ec407a; color: white;">
                                <span class="fw-bold">3</span>
                            </div>
                            <div>
                                <h3 class="h5" style="color: #6a1b9a;">Share Securely</h3>
                                <p>Control who can access your files. Share with specific users or make files public while maintaining verification.</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <div class="me-3 rounded-circle d-flex align-items-center justify-content-center" style="min-width: 50px; height: 50px; background-color: #ec407a; color: white;">
                                <span class="fw-bold">4</span>
                            </div>
                            <div>
                                <h3 class="h5" style="color: #6a1b9a;">Track & Verify</h3>
                                <p>Monitor all interactions with your files through our blockchain records, ensuring complete transparency.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-5" style="background: linear-gradient(135deg, #e0d4f7, #ffe0f0);">
        <div class="container text-center">
            <h2 class="mb-4" style="color: #8d50c7;">Ready to Secure Your Files?</h2>
            <p class="lead mb-4" style="color: #5a5a5a;">Join thousands of users who trust BlockShare for their secure file storage and sharing needs.</p>
            <a href="/Account/Register" class="btn btn-primary btn-lg px-5"><i class="fas fa-user-plus me-2"></i>Create Your Account</a>
            <p class="mt-3"><small>Already have an account? <a href="/Account/Login" style="color: #6a1b9a;">Log in here</a></small></p>
        </div>
    </section>
</main>
